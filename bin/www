const debug = require('debug')('ene');
const mongoose = require('mongoose');

const app = require('../app');
const bot = require('../irc-bot/bot');


mongoose.connection.on('connected', function() {
  debug('Mongoose connected');
});

mongoose.connection.on('disconnected', function() {
  debug('Mongoose disconnected');
});

mongoose.connection.on('error', function(error) {
  debug(`Mongoose connection error: ${error}`);
});


app.set('port',
        process.env.PORT || process.env.OPENSHIFT_NODEJS_PORT || 3000);
app.set('ipaddress',
        process.env.IP || process.env.OPENSHIFT_NODEJS_IP || '127.0.0.1');

const server = app.listen(app.get('port'), app.get('ipaddress'), function() {
  debug(`Express server listening on port ${server.address().port}`);
});


bot.connect();


function close() {
  mongoose.connection.close(function() {
    debug('Mongoose disconnected because of app termination');
  });

  server.close(function() {
    debug('Express server disconnected because of app termination');
  });

  bot.disconnect(function() {
    debug('IRC bot disconnected because of app termination');
  });
}

process.on('SIGINT', function() {
  close();
});

process.on('SIGTERM', function() {
  close();
});
