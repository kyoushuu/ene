extends layout

block content
  table
    tr
      td Username:
      td= organization.username
    tr
      td Short Name:
      td= organization.shortname
    tr
      td Country:
      - const cLink = '/country/' + organization.country.id;
      - const cName = organization.country.name;
      - const sLink = '/server/' + organization.country.server.id;
      - const sName = organization.country.server.name;
      td #[a(href=cLink) #{cName}] (#[a(href=sLink) #{sName}])

  h2 Actions
  ul
    li
      a(href='/organization/edit/' + organization.id) Edit
