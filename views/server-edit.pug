extends layout

block content
  form(method='post')
    div.form-item
      label(for='name') Name:
      input#name(type='text', name='name', value=server.name, required)
    div.form-item
      label(for='shortname') Short Name:
      input#shortname(type='text', name='shortname', value=server.shortname, required)
    div.form-item
      label(for='port') Port:
      input#port(type='number', name='port', value=server.port, required)
    div.form-item
      input#submit(type='submit', value='Edit')
