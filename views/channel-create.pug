extends layout

block content
  form(method='post')
    .form-item
      label(for='name') Name:
      input#name(type='text', name='name', value=name, required)
    .form-item
      label(for='keyword') Keyword:
      input#keyword(type='password', name='keyword')
    .form-item
      input#submit(type='submit', value='Create')
