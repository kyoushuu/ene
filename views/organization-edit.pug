extends layout

block content
  form(method='post')
    .form-item
      label(for='username') Username:
      input#username(type='text', name='username', value=organization.username, required)
    .form-item
      label(for='password') Password:
      input#password(type='password', name='password')
    .form-item
      label(for='shortname') Short Name:
      input#shortname(type='text', name='shortname', value=organization.shortname, required)
    .form-item
      input#submit(type='submit', value='Edit')
